
<div class="container">

	<div class="row">
		<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
			<%= form_for :product, html: { multipart: true }, url: products_path do |f| %>
				<div class="form-group">
					<!-- <input type="text" name="display_name" id="display_name" class="form-control input-lg" placeholder="Display Name" tabindex="3"> -->
					<%= f.text_field :name, class:'form-control input-lg', placeholder: 'Name' %><br>
				</div>
				
				<div class="row">
					<div class="col-xs-12 col-sm-6 col-md-6">
						<div class="form-group">
	                        <%= f.text_field :price, class:'form-control input-lg', placeholder: 'Price in BTC' %><br>
						</div>
					</div>

				</div>
				<div class="form-group">
					<!-- <input type="email" name="email" id="email" class="form-control input-lg" placeholder="Email Address" tabindex="4"> -->
    				 <%= f.text_area :description, class:'form-control input-lg', placeholder: 'Description' %>
				</div>
				<div class="form-group">
					<%= f.file_field :blob %>
				</div>
				<hr class="colorgraph">
				<div class="row">
					 <%= f.submit 'Submit' , class: "btn btn-primary btn-block btn-lg" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
